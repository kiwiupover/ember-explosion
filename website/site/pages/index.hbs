{{#layout}}
  <div class="hero row center-xs middle-xs">
    <div class="col-sm-12">
      <div class="box">
        <div class="row middle-xs center-xs">
          <div class="col-xs-11 col-sm-8">
            <div class="box">
              <h1>
                Ember Rodeo
              </h1>
              <h3>MAY 1 - 2, 2015</h3>
              <h5>The Ember.js Programming Competition</h5>
              <div class="row center-xs">
                <div class="col-xs-10 col-sm-10 col-md-8">
                  <p class="text-left">Ember Rodeo is a distributed programming competition where hundreds of teams of one to four people, from all over the world, have 48 hours to build an innovative web application, with Ember.js javascript framework. </p>
                </div>
              </div>
              {{>mail-chimp}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid sponsors">
    <div class="row ptl pbm">
      <div class="col-xs center-xs">
        <h2>Sponsors</h2>
      </div>
    </div>
    <div class="row around-xs middle-xs">

      {{#each page.sponsors}}
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 mbm">
          <div class="box">
            <a href={{link}}>
              <img src={{logo}} alt={{name}} width={{width}}>
            </a>
          </div>
        </div>
      {{/each}}
      </div>
    </div>
  </div>
  <div class="container-fluid faqs">
    <div class="row center-xs">
      <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
        <h2>Frequently Asked Questions</h2>
          {{>faqs}}
      </div>
    </div>
  </div>

{{/layout}}
